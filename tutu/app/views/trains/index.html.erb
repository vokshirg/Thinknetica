<p id="notice"><%= notice %></p>

<h1>Список поездов</h1>

<table>
  <thead>
    <tr>
      <th>Номер поезда</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trains.each do |train| %>
      <tr>
        <td><%= train.number %></td>
        <td><%= link_to 'Просмотреть', train %></td>
        <td><%= link_to 'Редактировать', edit_train_path(train) %></td>
        <td><%= link_to 'Удалить', train, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить поезд', new_train_path %>
