    <tr>
      <th>№</th>
      <th>Верхних мест</th>
      <th>Нижних мест</th>
      <th>Боковых Верхних мест</th>
      <th>Боковых Нижних мест</th>
    </tr>
  </thead>

  <tbody>
  <%= render partial: 'admin/wagons/economy_wagon', collection: @train.wagons.economy %>
  </tbody>
</table>
<% end %>

<br>


