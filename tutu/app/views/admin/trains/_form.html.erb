<%= form_for([:admin, @train]) do |f| %>
  <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= f.label :number, 'Номер поезда'  %><br>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.radio_button(:reverse_sort, true) %>
    <%= f.label(:reverse_sort_true, "Сортировка с хвоста") %>
    <%= f.radio_button(:reverse_sort, false) %>
    <%= f.label(:reverse_sort_false, "с головы") %>
  </div>

  <div class="field">
    <%= f.label :current_station, 'Текущая станция' %>
    <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title, {prompt: 'Выберите станцию'} %>
  </div>

  <div class="field">
    <%= f.label :current_station, 'Маршрут' %>
    <%= f.collection_select :route_id, Route.all, :id, :name, {prompt: 'Выберите маршрут'} %>
  </div>

  <div class="actions">
    <%= f.submit "#{@train.new_record? ? 'Создать' : 'Изменить'}" %>
  </div>
<% end %>
